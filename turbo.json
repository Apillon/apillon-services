{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "prebuild": {
      "outputs": []
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "deploy:dev": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".serverless/**"
      ]
    },
    "deploy:stage": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".serverless/**"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "test:logging": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "test-server": {
      "cache": false
    },
    "db-upgrade:ci": {
      "cache": false
    },
    "db-rebuild-test": {
      "cache": false
    },
    "@apillon/lib#build": {
      "dependsOn": [
        "@apillon/blockchain-lib#build"
      ]
    },
    "@apillon/blockchain#build": {
      "dependsOn": [
        "@apillon/lib#build",
        "@apillon/service-lib#build",
        "@apillon/tests-lib#build"
      ]
    },
    "@apillon/contracts#build": {
      "dependsOn": [
        "@apillon/lib#build",
        "@apillon/service-lib#build",
        "@apillon/tests-lib#build"
      ]
    },
    "@apillon/nfts#build": {
      "dependsOn": [
        "@apillon/lib#build",
        "@apillon/service-lib#build"
      ]
    },
    "@apillon/mailing#build": {
      "dependsOn": [
        "@apillon/lib#build"
      ]
    }
  }
}
