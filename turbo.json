{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "deploy:dev": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".serverless/**"
      ]
    },
    "deploy:stage": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".serverless/**"
      ]
    },
    "dev": {
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "test:logging": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "test-server": {
      "cache": false
    },
    "db-upgrade:ci": {
      "cache": false
    }
  }
}