{
  "name": "apillon-services",
  "version": "2.2.0",
  "workspaces": [
    "packages/*",
    "services/*",
    "modules/*"
  ],
  "scripts": {
    "prebuild": "npx turbo run prebuild",
    "build": "npx turbo run build",
    "build-libs": "npx turbo run build --filter=@apillon/lib --filter=@apillon/modules-lib --filter=@apillon/service-lib --filter=@apillon/workers-lib --filter=@apillon/tests-lib --filter=@apillon/blockchain-lib",
    "build-no-cache": "npx turbo run build --no-cache",
    "dev": "npx turbo run dev --parallel",
    "dev-min": "npx turbo run dev --parallel --filter=!@apillon/authentication-api --filter=!@apillon/authentication --filter=!@apillon/api --filter=!@apillon/referral --filter=!@apillon/monitoring --filter=!@apillon/mailing --filter=!@apillon/workers-lib",
    "dev-storage": "npx turbo run dev --parallel --filter=!@apillon/authentication-api --filter=!@apillon/authentication --filter=!@apillon/referral --filter=!@apillon/social --filter=!@apillon/infrastructure  --filter=!@apillon/nfts  --filter=!@apillon/computing",
    "test:blockchain": "npx turbo run test --concurrency=1 --continue --filter=@apillon/blockchain",
    "test": "npx turbo run test --concurrency=1 --continue --filter=!@apillon/authentication-api --force",
    "test:logging": "npx turbo run test:logging --concurrency=1 --continue --filter=!@apillon/authentication-api --force",
    "test-server": "npx turbo run test-server",
    "test-server-min": "npx turbo run test-server --filter=!@apillon/referral --filter=!@apillon/mailing --filter=!@apillon/blockchain  --filter=!@apillon/nfts --filter=!@apillon/authentication --filter=!@apillon/social --filter=!@apillon/infrastructure --filter=!@apillon/computing",
    "test-server-referral": "npx turbo run test-server --filter=@apillon/referral --filter=@apillon/access --filter=@apillon/monitoring",
    "test-server-nfts": "npx turbo run test-server --filter=@apillon/access --filter=@apillon/monitoring --filter=@apillon/storage --filter=@apillon/mailing --filter=@apillon/config  --filter=@apillon/blockchain --filter=@apillon/nfts",
    "test-server-storage": "npx turbo run test-server --filter=@apillon/access --filter=@apillon/monitoring --filter=@apillon/storage --filter=@apillon/mailing --filter=@apillon/config  --filter=@apillon/blockchain",
    "test-server-authentication": "npx turbo run test-server --filter=@apillon/access --filter=@apillon/monitoring --filter=@apillon/authentication --filter=@apillon/mailing --filter=@apillon/config  --filter=@apillon/blockchain",
    "test-server-infrastructure": "npx turbo run test-server --filter=@apillon/access --filter=@apillon/monitoring --filter=@apillon/infrastructure --filter=@apillon/mailing --filter=@apillon/config",
    "lint": "npx turbo run lint --force",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "deploy:dev": "npx turbo run deploy:dev -vvv --force --continue=false --filter=!@apillon/api --filter=!@apillon/authentication-api",
    "watch-libs": "npx turbo run dev --filter=@apillon/lib --filter=@apillon/modules-lib --filter=@apillon/service-lib --filter=@apillon/blockchain-lib",
    "db-upgrade:ci": "npx turbo run db-upgrade:ci",
    "db-rebuild-test": "npx turbo run db-rebuild-test"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@jest/globals": "^29.7.0",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.7",
    "@types/aws-lambda": "^8.10.137",
    "@types/aws-serverless-express": "^3.3.9",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.12.7",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.8",
    "axios-mock-adapter": "^1.22.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.20.2",
    "eslint-config-common": "*",
    "http-request-mock": "^1.8.18",
    "jest": "29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "latest",
    "rimraf": "^5.0.5",
    "serverless-webpack": "^5.13.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "4.2.0",
    "turbo": "^2.1.1",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-node-externals": "^3.0.0"
  },
  "overrides": {
    "ipfs-utils": "9.0.6",
    "semver": "7.6.1"
  },
  "engines": {
    "npm": ">=10.0.0",
    "node": ">=20.0.0"
  },
  "packageManager": "npm@8.4.0"
}
